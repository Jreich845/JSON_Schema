
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChemicalInfo",
  "type": "object",
  "properties": {
    "chemical_name": {
      "type": "string",
      "description": "The name of the chemical."
    },
    "cas_number": {
      "type": "string",
      "description": "The CAS number for the chemical."
    },
    "description": {
      "type": "string",
      "description": "A brief description of the chemical."
    },
    "industries_used_in": {
      "type": "array",
      "description": "A list of industries where the chemical is commonly used.",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["chemical_name", "cas_number", "description", "industries_used_in"]
}
